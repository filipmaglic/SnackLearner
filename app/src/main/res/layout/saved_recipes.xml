<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Naslov recepta -->
    <TextView
        android:id="@+id/recipeTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naslov recepta"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Opis recepta -->
    <TextView
        android:id="@+id/recipeDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kratki opis recepta"
        android:textSize="14sp"
        android:textColor="#555555"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Korisničko ime autora -->
    <TextView
        android:id="@+id/recipeUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by username"
        android:textSize="14sp"
        android:textColor="#777777"
        android:layout_marginBottom="8dp" />

    <!-- Red s lajkovima i dislajkovima -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/recipeLikesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👍 0"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingEnd="24dp" />

        <TextView
            android:id="@+id/recipeDislikesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👎 0"
            android:textSize="14sp"
            android:textColor="#333333" />
    </LinearLayout>

</LinearLayout>
