            android:key="user_info"
            android:title="Korisničko ime"
            android:summary="Učitavam..."
            android:selectable="false" />

        <!-- NOVO: opcija za uređivanje profila -->
        <Preference
            android:key="edit_profile"
            android:title="Uredi profil"
            android:summary="Promijenite podatke o svom profilu" />

        <Preference
            android:key="logout"
            android:title="Odjava"
            android:summary="Odjavite se iz aplikacije" />
